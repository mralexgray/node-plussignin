

extends ./partials/template.pug

append styles
	+sheet('https://cdnjs.cloudflare.com/ajax/libs/responsive-nav.js/1.12/responsive-nav.css')
	style
		:stylus
			body, div, h1, h2, p, ol, ul, li
				margin 0
				padding 0
				border 0

			@-webkit-viewport
				width device-width

			@-moz-viewport
				width device-width

			@-ms-viewport
				width device-width

			@-o-viewport
				width device-width

			@viewport
				width device-width

			html, body
				min-height 100%

			body
				min-width 290px
				font-smoothing antialiased
				text-size-adjust 100%
				textadjust 100%
				background-color #444 
				//- url("debut_dark.png") repeat
				color #666
				font 400 100% / 1.5 "Helvetica Neue", Helvetica, Arial, sans-serif

			h1
				font-size 3em
				line-height 1
				color #222
				margin-bottom .5em
				float left
				width 100%

			h2
				float left
				width 100%
				font-size 1.5em
				color #222
				margin 1em 0 .5em

			p
				float left
				width 100%
				margin-bottom 1em
				&.intro
					font-size 1.25em
					color #555
					font-weight 700

			a
				color #f4f4f4
				text-decoration none

			a:active, a:hover
				outline 0

			.main
				box-sizing border-box
				overflow-scrolling touch
				padding 3em 4em
				position fixed
				overflow hidden
				overflow-y scroll
				borderleft-radius 5px
				box-shadow 0 0 15px rgba(0, 0, 0, .6)
				top .8em
				right 0
				bottom 0
				width 76%
				background #fff
				&::-webkit-scrollbar
					appearance none
					background-color rgba(0, 0, 0, .15)
					width 8px
					height 8px
				&::-webkit-scrollbar-thumb
					border-radius 0
					background-color rgba(0, 0, 0, .4)

			.nav-collapse
				position absolute
				width 24%
				top 2em
				left 0
				ul
					display block
					width 100%
					list-style none
				li
					width 100%
					display block
					&:first-child
						a
							border-top 0
					&:last-child
						a
							border-bottom 0
				a
					color #aaa
					font-weight 700
					box-sizing border-box
					transition background .3s ease
					text-shadow 0 -1px rgba(0, 0, 0, .5)
					border-bottom 1px solid rgba(0, 0, 0, .2)
					border-top 1px solid rgba(255, 255, 255, .1)
					display block
					padding .6em 2em
					width 100%
					&:hover
						background rgba(255, 255, 255, .1)
				.active
					a
						color #fff
						background rgba(0, 0, 0, .3)

			#toggle
				display none
				//- background-image url("http://responsive-nav.com/demo/hamburger.gif")
				background-size 100px 100px

			@media screen and (max-width:40em)
				.js
					.nav-collapse
						clip rect(0 0 0 0)
						max-height 0
						position absolute
						display block
						overflow hidden
				.nav-collapse
					top 0
					width 100%
					position relative
					&.opened
						max-height 9999px
					a
						&:hover
							background transparent
					.active
						a
							&:hover
								color #fff
								background rgba(0, 0, 0, .3)
				#toggle
					touch-callout none
					user-select none
					display block
					width 70px
					height 55px
					float right
					margin 0 -2em 1em 0
					text-indent -9999px
					overflow hidden
					//- background #444 url("http://responsive-nav.com/demo/hamburger.gif") no-repeat 50% 33%
				.main
					overflow-scrolling auto
					padding 0 2em 2em
					border-radius 0
					box-shadow none
					position relative
					width 100%
					overflow hidden
					&::-webkit-scrollbar
						background-color transparent

			/*@media screen and (-webkit-min-device-pixel-ratio:1.3), screen and (min--moz-device-pixel-ratio:1.3), screen and (-o-min-device-pixel-ratio:2 / 1), screen and (min-device-pixel-ratio:1.3), screen and (min-resolution:192dpi), screen and (min-resolution:2dppx)
				body
					background-image url("debut_dark_@2X.png")
					background-size 200px 200px
					background-size 200px 200px

			}
			*/
			@media screen and (min-width:76em)
				.nav-collapse
					width 18em

			@media screen and (min-width:76em)
				.main
					width auto
					left 18em


