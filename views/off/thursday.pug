extends ./partials/template.pug
append head
  style
    :stylus
      .toggle-nav
        display none

      @media screen and (min-width: 860px)
        .menu
          width 100%
          padding 10px 18px
          box-shadow 0px 1px 1px rgba(0,0,0,0.15)
          border-radius 3px
          background #303030

      .menu
        ul
          display inline-block
        li
          margin 0px 50px 0px 0px
          float left
          list-style none
          font-size 17px
          &:last-child
            margin-right 0px
        a
          text-shadow 0px 1px 0px rgba(0,0,0,0.5)
          color #777
          transition color linear 0.15s

      .menu a:hover, .menu .current-item a
        text-decoration none
        color #66a992

      .search-form
        float right
        display inline-block
        input
          width 200px
          height 30px
          padding 0px 8px
          float left
          border-radius 2px 0px 0px 2px
          font-size 13px
        button
          height 30px
          padding 0px 7px
          float right
          border-radius 0px 2px 2px 0px
          background #66a992
          font-size 13px
          font-weight 600
          text-shadow 0px 1px 0px rgba(0,0,0,0.3)
          color #fff

      @media screen and (max-width: 1150px)
        .wrap
          width 90%

      @media screen and (max-width: 970px)
        .search-form
          input
            width 120px

      @media screen and (max-width: 860px)
        .menu
          position relative
          display inline-block
          ul
            width 100%
            position absolute
            top 120%
            left 0px
            padding 10px 18px
            box-shadow 0px 1px 1px rgba(0,0,0,0.15)
            border-radius 3px
            background #303030
            &.active
              display none
            &:after
              width 0px
              height 0px
              position absolute
              top 0%
              left 22px
              content ''
              transform translate(0%, -100%)
              border-left 7px solid transparent
              border-right 7px solid transparent
              border-bottom 7px solid #303030
          li
            margin 5px 0px 5px 0px
            float none
            display block
          a
            display block
        .toggle-nav
          padding 20px
          float left
          display inline-block
          box-shadow 0px 1px 1px rgba(0,0,0,0.15)
          border-radius 3px
          background #303030
          text-shadow 0px 1px 0px rgba(0,0,0,0.5)
          color #777
          font-size 20px
          transition color linear 0.15s
        .search-form
          margin 12px 0px 0px 20px
          float left
          input
            box-shadow -1px 1px 2px rgba(0,0,0,0.1)

      @media screen and (max-width: 860px)
        .toggle-nav:hover, .toggle-nav.active
          text-decoration none
          color #66a992
append body
  nav.menu
    ul.active
      li.current-item
        a(href='#') Home
      li
        a(href='#') My Work
      li
        a(href='#') About Me
      li
        a(href='#') Get in Touch
      li
        a(href='#') Blog
    a.toggle-nav(href='#') &#x2630;
    form.search-form
      input(type='text')
      button Search
append scripts
  script
    :coffee-script
      $ ->
        $('.toggle-nav').click (e) ->
          $(@).toggleClass 'active'
          $('.menu ul').toggleClass 'active'
          e.preventDefault()